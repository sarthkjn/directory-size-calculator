{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Full Project",
      "type": "shell",
      "command": "g++",
      "args": [
        "src/*.cpp",
        "-Iinclude",
        "-o",
        "dirsize.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiles all source files in src/ and links them into dirsize.exe"
    }
  ]
}
